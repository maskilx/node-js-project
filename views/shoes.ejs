<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shoe Store</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="shoes.css">
</head>
<body>
    <div id="page-container">
        <!-- Include header partial -->
        <%- include('partials/header') %>
        <main>
            <!-- Include hero partial -->
            <%- include('partials/hero') %>
            <!-- Include products partial -->
            <%- include('partials/products', { shoes: shoes }) %>
        </main>
        <!-- Include login partial -->
        <%- include('partials/login') %>
        <!-- Shoe details container hidden by default -->
        <div id="shoeDetailsContainer" style="display: none;"></div>
        <!-- Include footer partial -->
        <%- include('partials/footer') %>
    </div>
    <!-- Include JavaScript files -->
    <script src="scripts/viewShoeDetails.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            // Show login form when "Sign In" is clicked
            $('.sign-in').click(function(e) {
                e.preventDefault();
                $('#loginContainer').show(); // Show the login container
            });

            // Handle login form submission
            $('#loginForm').submit(function(e) {
                e.preventDefault();
                var email = $('#email').val();
                var password = $('#password').val();

                $.ajax({
                    url: "/user/login",
                    method: "POST",
                    data: { email: email, password: password },
                    success: function(response) {
                        console.log("Login successful:", response);
                        alert("Login successful!");
                        window.location.href = "/"; // Redirect to home page
                    },
                    error: function(xhr, status, error) {
                        console.error("Login error:", error);
                        alert("Login failed. Please try again.");
                    }
                });
            });
        });
    </script>
</body>
</html>
